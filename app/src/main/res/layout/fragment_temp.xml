<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:text="Conversion Celsius ↔ Fahrenheit"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RadioGroup android:id="@+id/rgTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton android:id="@+id/rbCtoF" android:text="Celsius → Fahrenheit" android:checked="true"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
        <RadioButton android:id="@+id/rbFtoC" android:text="Fahrenheit → Celsius" android:padding="16dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
    </RadioGroup>

    <EditText
        android:id="@+id/etTempInput"
        android:hint="Entrer la valeur"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <Button
        android:id="@+id/btnConvertTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculer"/>

    <TextView
        android:id="@+id/tvTempResult"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Résultat : -" android:textSize="16sp"
        android:layout_marginTop="8dp"/>

</LinearLayout>